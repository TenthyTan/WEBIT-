<h1>Displaying all Patient {{record.patientId.screenName}}'s data in {{record.recordDate}} </h1>
<script type = "text/x-handelbars-template" id = "tbody-tr">
    {{#each records.data}}
        <form action="/general/viewData" method="SAVE">
            <tr>
                <td>{{this.createdData}}</td>
                <td>{{this.value}}</td>
                <td>{{this.value}}</td>
                <td>{{this.value}}</td>
                <td>{{this.value}}</td>
            </tr>
        </form>
    {{/each}}
</script>
<table border = "1">
    <thead>
        <tr>
            <th> Date </th>
            <th> {{records.data.bgl.category}} </th>
            <th> {{records.data.doit.category}} </th>
            <th> {{records.data.weight.category}}</th>
            <th> {{records.data.exercise.category}} </th>
        </tr>
    </thead>
    <tbody>
        
    </tbody>
</table>