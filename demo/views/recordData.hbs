<div>
  <h1>
    Patient {{demoPatient.username}}'s Recorded Data in {{demoRecords.CreatedDate}}
  </h1>
  <p>*You don't need to record if the color is grey.</p>
  <table border="1">
    <tr>
      <th> Data Name </th>
      <th> Data Value </th>
      <th> Data Recorded Time </th>
      <th> Data Status </th>
      <th> Comment </th>
    </tr>
    {{#each demoRecords.data}}  
    <form action="/recordData" method="POST">
      <tr>
        <td> {{@key}} </td>
        <input type="hidden" name="key" value="{{@key}}">
        <td> {{this.name}} </td>
        {{#ifUnrecorded this.status}}
        <td> <input type="text" name="value" placeholder="Enter your record here" required> </td>
        {{else}}
        <td> {{this.value}} </td>
        {{/ifUnrecorded}}
        <td> {{this.createdDate}} </td>
        <td style="background-color:
          {{#ifRecorded this.status}}
          green
          {{else}}
          {{#ifUnrecorded this.status}}
          red
          {{else}}
          grey
          {{/ifUnrecorded}}
          {{/ifRecorded}}
          ;">
          {{this.status}}
        </td>
        {{#ifUnrecorded this.status}}
        <td> <input type="text" name="comment" placeholder="Enter your comment here" required> </td>
        {{else}}
        <td> {{this.comment}} </td>
        {{/ifUnrecorded}}
        {{#ifUnrecorded this.status}}
        <td> <button type="submit"> submit </td>
        {{/ifUnrecorded}}
      </tr>
    </form>
    {{/each}}
  </table>
</div>