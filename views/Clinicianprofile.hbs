<body>
    <form action="/clinicians/profile" method="GET"> 
        <div class="sidenav">
            <img src="/img/Group-44.png" />
            <p >{{doctor.firstName}}</p >

            <img src="/img/icons8-dashboard-64.png" />
            <p href="/clinicians/dashboard">Dashboard</p >

            <img src="/img/list-dash-header.png" />
            <p href="/clinicians/list of clinical notes">Note</p >

            <img src="/img/Comment-1.png" />
            <p href="clinicians/checkComment">Comment</p >

            <img src="/img/icons8-add-user-male-96.png" />
            <p href="/clinicians/createProfile">Create</p >

            <img src="/img/icons8-search-account-64.png" />
            <p href="/clinicians/profile">Profile</p >
        </div>

        <div class="box_right_aaa">
            <div class="top_font">Clinician Profile</div>
            <div class="box_foot">
                <div class="img"><img src="../img/Group-44.png" alt=""></div>
                <div>
                    <div class="right_ipt">
                        <div class="right_ipt_a">Full Name :</div>
                        <div class="right_ipt_b">{{doctor.firstName}} {{doctor.lastName}}</div>
                    </div>
                    <div class="right_ipt">
                        <div class="right_ipt_a">Email Address: </div>
                        <div class="right_ipt_b">{{doctor.email}}</div>
                    </div>
                    <div class="right_ipt">
                        <div class="right_ipt_a">Patients name :</div>
                        <div class="right_ipt_bb">{{doctor.patients.patientName}}</div>
                    </div>
                    <div class="right_ipt">
                        <div class="right_ipt_a">Hospital Address : </div>
                        <div class="right_ipt_b">{{doctor.hospital}}</div>
                    </div>
                </div>
            </div> 
        </div>
    </form>
</body>