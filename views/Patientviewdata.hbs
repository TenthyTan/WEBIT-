<form action="/patients/viewTable" method="GET">
<section>
    <div class="main">
        <div class="title-data">
            <h6>Patient Name: {{patient.userName}}&nbsp;&nbsp;&nbsp;&nbsp;Age: {{age.age}}
                &nbsp;&nbsp;&nbsp;&nbsp;</h6>
        </div>
        <div style="padding: 0;height: 500px; overflow: auto;">
            <table id="table" style="margin: 0;">
                <thead id="tablehead">
                    <tr>
                        <th> Date </th>
                        <th>Blood Glucose Level(/L)</th>
                        <th>Insulin Taken(Times)</th>
                        <th>Weight (kg)</th>
                        <th>Exercise(Step count)</th>
                    </tr>
                </thead>
                {{#each record}}
                <tbody class="viewdatatbody">
                    <td>{{this.recordDate}}</td>
                    {{#each this.data}}
                    {{#ifUnrecorded this.status}}
                    <td style="color: #bb1f1f">Missing</td>
                    {{else}}
                    <td style="background-color:
                    {{#ifNoneed this.status}}
                    grey
                    {{/ifNoneed }}
                    ;">{{this.value}}</td>
                    {{/ifUnrecorded}}
                    {{/each}}
                </tbody>
                {{/each}}

            </table>
        </div>

        <div class="viewDatacla">
            <div id="button" style="margin-top:50px;">
                <button ><a href="/patients/viewChart" style="padding:10px;font-size: 30px;">View</a></button>
            </div>

            <div style="text-align: center;font-size:20px">
                <p class="">View Data On Chart</p>
            </div>

        </div>

    </section>
    <footer >
        Doctor {{patient.doctor}} : {{patient.supportMes}}
    </footer>
</form>


