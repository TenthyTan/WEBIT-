
<form action="/patients/viewTable" method="GET">
<div class="sidenav">
    <img src="../public/img/head.png" />
    <p><a href="/patients/home">{{patient.userName}}</a></p >
    <img src="../public/img/recording.png" />
    <p><a href="/patients/recordData">Record</a></p >
    <img src="../public/img/view.png" />
    <p><a href="/patients/viewTable">View</a></p >
    <img src="../public/img/ranking.png" />
    <p><a href="/patients/recordRank">Rank</a></p >
    <img src="../public/img/profile.png" />
    <p><a href="/patients/profile">Profile</a></p >
    <form method="POST" action="/patients/logout">
    <button>Log out</button>
    </form>
</div>
<section>
<div class="main">
        <div class="title-data"><h6>Patient Name: {{patient.userName}}&nbsp;&nbsp;&nbsp;&nbsp;Age: {{age.age}} &nbsp;&nbsp;&nbsp;&nbsp;Gender:Male</h6></div>
<table>
    <thead>
        <tr>
            <th> Date </th>
            <th>Blood Glucose Level(/L)</th>
            <th>Insulin Taken(Times)</th>
            <th>Weight (kg)</th>
            <th>Exercise(Step count)</th>
        </tr>
    </thead>
    {{#each record}}
    <tbody>
            <td >{{this.recordDate}}</td>
            {{#each this.data}}
            {{#ifUnrecorded this.status}}
            <td style = "color: #bb1f1f">Missing</td>
            {{else}}
            <td style="background-color:
            {{#ifNoneed this.status}}
            grey
            {{/ifNoneed }}
            ;">{{this.value}}</td>
            {{/ifUnrecorded}}
            {{/each}}
    </tbody>
    {{/each}}
</table>
<button class="viewdatabotton"><a href="/patients/viewChart">View</a></button>
<p class="annotationofbotton">View Data On Chart</p >
</section>
<footer>
     Doctor {{patient.doctor}} : {{patient.supportMes}}
</footer>
</form>


