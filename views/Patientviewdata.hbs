
<form action="/patients/viewTable" method="GET">
<div class="sidenav">
    <img src="../public/img/head.png" />
    <p>{{patient.userName}}</p>
    <img src="../public/img/recording.png" />
    <p>Record</p >
    <img src="../public/img/view.png" />
    <p>View</p >
    <img src="../public/img/ranking.png" />
    <p>Rank</p >
    <img src="../public/img/profile.png" />
    <p>Profile</p >
    <img src="../public/img/setting.png" />
    <p>setting</p >
    <img src="../public/img/warning.png" />
    <p>urgency</p >
</div>
<section>

<div class="main">
        <div class="title-data"><h6>Patient Name: {{patient.userName}}&nbsp;&nbsp;&nbsp;&nbsp;Age: {{age.age}} &nbsp;&nbsp;&nbsp;&nbsp;Gender:Male</h6></div>
<table>
        <tr>
            <thead>
                <th> Date </th>
                <th>Blood Glucose Level(/L)</th>
                <th>Insulin Taken(Times)</th>
                <th>Weight (kg)</th>
                <th>Exercise(Step count)</th>
            </thead>
            <tbody>
                {{#each record}}
                <td >{{this.recordDate}}</td>
                
                {{#each this.data}} 
                    {{#ifUnrecorded this.status}}
                    <td style = "color: #bb1f1f">Missing</td>
                    {{else}}
                    
                    <td style="background-color:
                    {{#ifNoneed this.status}}
                    grey
                    {{/ifNoneed }}
                    ;">
                    {{this.value}}
                    </td>
                    {{/ifUnrecorded}}
                {{/each}}
                {{/each}}
            </tbody>
        </tr>
</table>
<button class="viewdatabotton" href="/patients/viewChart">View</button>
<p class="annotationofbotton">View Data On Chart</p>
</section>
</form>


