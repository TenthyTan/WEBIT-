<head>
  <title>Clinician Dashboard</title>
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>

<body>
  <form action="/clinicians/account">
    <div class="login_box">
      <p class="title-account">Create Patient's Account</p>
      <link
        href="https://fonts.googleapis.com/css2?family=Quattrocento+Sans:wght@700&display=swap"
        rel="stylesheet"
      />
      <div class="center-form-box">
        <div class="line-css"><input
            class="input-css"
            type="text"
            name="userName"
            placeholder="User name"
            required
          /></div>
        <div class="two-col-line">
          <div class="row-item">
            <input
              class="input-css"
              type="text"
              name="Password"
              placeholder="Password"
              required
            />
          </div>
          <div class="row-item">
            <input
              class="input-css"
              type="text"
              name="ConfirmPassword"
              placeholder="Confirm Password"
              required
            />
          </div>
        </div>
        <div class="two-col-line">
          <div class="row-item">
            <input
              class="input-css"
              type="text"
              name="Firstname"
              placeholder="First name"
              required
            />
          </div>
          <div class="row-item">
            <input
              class="input-css"
              type="text"
              name="Lastname"
              placeholder="Last name"
              required
            />
          </div>
        </div>
        <div class="line-css"><input
            class="input-css"
            type="text"
            name="EmailAddress"
            placeholder="Email Address"
            required
          /></div>
        <div class="three-col-line">
          <div>Birth of Date:</div>
          <div class="input-css-day"><input class="input-css1" /></div>

          <div>Day</div>
          <input class="input-css1" />
          <div>Month</div>
          <input class="input-css1" />
          <div>Year</div>

        </div>
        <div class="line-css"><input
            class="input-css"
            type="text"
            name="PhoneNumber"
            placeholder="Phone Number"
            required
          /></div>
        <div class="two-col-line">
          <div class="row-item"><input
              type="submit"
              value="CANCEL"
              class="submit-css"
            /></div>
          <div class="row-item"><input
              type="submit"
              value="CREATE ACCOUNT"
              class="submit-css"
            /></div>
        </div>
      </div>
    </div>
  </form>
</body>