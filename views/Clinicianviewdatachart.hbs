   <div style="width: 100%; display: flex; flex-wrap: wrap; justify-content: space-around; align-content: space-between;margin-left:90px;">
       <div style="width: 45%;"> {{> blood dates=dates datas=datas}}    </div>
       <div style="width: 45%;"> {{> weight dates=dates datas=datas}}   </div>
       <div style="width: 45%;"> {{> insulin dates=dates datas=datas}}  </div>
       <div style="width: 45%;"> {{> exercise dates=dates datas=datas}} </div>
    </div>
