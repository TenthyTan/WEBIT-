
<div id='Weight' style="width: 100%;height:400px;margin-top:20px"></div>
<script src="https://cdn.bootcdn.net/ajax/libs/echarts/5.3.2/echarts.common.js"></script>
<script type='text/javascript' >
var myChart = echarts.init(document.getElementById('Weight'))
var option =  {
    title: {
    left: 'center',
    text: 'Weight(kg)'
  },
  tooltip: {
    trigger: 'axis',
    axisPointer: {
      type: 'cross',
      label: {
        backgroundColor: '#6a7985'
      }
    }
  },
  xAxis: {
    type: 'category',
    data: {{{dates}}}
  },
  yAxis: {
    type: 'value'
  },
  series: [
    {
      data: {{{datas}}}.weight,
      type: 'line'
    }
  ]
};

option && myChart.setOption(option);
</script>
