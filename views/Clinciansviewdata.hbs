<form action="/clinicians/viewTable" method="GET">
    <div class="sidenav">
        <img src="/img/Group-44.png" />
        <p >{{doctor.firstName}}</p >

        <img src="/img/icons8-dashboard-64.png" />
        <p href="/clinicians/dashboard">Dashboard</p >

        <img src="/img/list-dash-header.png" />
        <p href="/clinicians/list of clinical notes">Note</p >

        <img src="/img/Comment-1.png" />
        <p href="clinicians/checkComment">Comment</p >

        <img src="/img/icons8-add-user-male-96.png" />
        <p href="/clinicians/createProfile">Create</p >

        <img src="/img/icons8-search-account-64.png" />
        <p href="/clinicians/profile">Profile</p >
    </div>
<section>

<div class="main">
        <div class="title-data"><h6>Patient Name: {{doctor.patients.patientName}}&nbsp;&nbsp;&nbsp;&nbsp;Age: {{age.age}} &nbsp;&nbsp;&nbsp;&nbsp;Gender:Male</h6></div>
<table>
    <thead>
        <tr>
            <th> Date </th>
            <th>Blood Glucose Level(/L)</th>
            <th>Insulin Taken(Times)</th>
            <th>Weight (kg)</th>
            <th>Exercise(Step count)</th>

        </tr>
    </thead>
    {{#each record}}
    <tbody>
            <td >{{this.recordDate}}</td>
            {{#each this.data}}
            {{#ifUnrecorded this.status}}
            <td style = "color: #bb1f1f">Missing</td>
            {{else}}
            <td style="background-color:
            {{#ifNoneed this.status}}
            grey
            {{/ifNoneed }}
            ;">{{this.value}}</td>
            {{/ifUnrecorded}}
            {{/each}}
    </tbody>
    {{/each}}
</table>
<button class="viewdatabotton" href="/clinicians/viewChart">View</button>
<p class="annotationofbotton">View Data On Chart</p>
</section>
</form>