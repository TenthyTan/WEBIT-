
<div class="header">
  <p class="left lightgreen">Diabetes@Home</p>
</div>
<section>
  <div class="sidenav">
    <img src="../public/img/head.png" />
    <p>Pat</p>
    <img src="../public/img/recording.png" />
    <p>Record</p>
    <img src="../public/img/view.png" />
    <p>View</p>
    <img src="../public/img/ranking.png" />
    <p>Rank</p>
    <img src="../public/img/profile.png" />
    <p>Profile</p>
    <img src="../public/img/setting.png" />
    <p>setting</p>
    <img src="../public/img/warning.png" />
    <p>urgency</p>
  </div>

    <div class="main">
        <h3>Date: {{record.recordDate}}</h3>
        <div class="hint">
            <p> * You don't need to record if the color is grey.</p>
        </div>
        <table border="1">
           <tr>
             <th> Data </th>
             <th> Data Name </th>
             <th> Data Value </th>
             <th> Data Recorded Time </th>
             <th> Data Status </th>
             <th> Comment </th>
           </tr>
    {{#each record.data}}  
    <form action="/patients/recordData" method="POST">
      <tr>
        <td> {{@key}} </td>
        <input type="hidden" name="key" value="{{@key}}">
        <td> {{this.name}} </td>
        {{#ifUnrecorded this.status}}
        <td> <input type="digit" name="value" placeholder="Enter your record here" required> </td>
        {{else}}
        <td> {{this.value}} </td>
        {{/ifUnrecorded}}
        <td> {{this.createDate}} </td>
        <td style="background-color:
          {{#ifRecorded this.status}}
          green
          {{else}}
          {{#ifUnrecorded this.status}}
          red
          {{else}}
          white
          {{/ifUnrecorded}}
          {{/ifRecorded}}
          ;">
          {{this.status}}
        </td>
        {{#ifUnrecorded this.status}}
        <td> <input type="text" name="comment" placeholder="Enter your comment here"> </td>
        {{else}}
        <td> {{this.comment}} </td>
        {{/ifUnrecorded}}
        {{#ifUnrecorded this.status}}
        <td> <button type="submit"> submit </td>
        {{/ifUnrecorded}}
      </tr>
    </form>
    {{/each}}
        </table>
    </div>
</section>